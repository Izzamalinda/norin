<!-- Modal Tambah Menu -->
<div id="addModal" class="hidden fixed inset-0 bg-black bg-opacity-50 modal-backdrop flex justify-center items-center z-50">
  <div class="modal-content bg-white rounded-2xl p-6 w-full max-w-md mx-4 max-h-[90vh] overflow-y-auto">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-gray-900">
        <i class="fas fa-plus-circle text-orange-600 mr-2"></i>
        Tambah Menu
      </h2>
      <button onclick="closeAddModal()" class="p-2 hover:bg-gray-100 rounded-full transition-colors">
        <i class="fas fa-times text-gray-400"></i>
      </button>
    </div>
    
    <form action="/admin/kelola-menu" method="POST" enctype="multipart/form-data" class="space-y-4" onsubmit="handleAddSubmit(event)">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Nama Menu</label>
        <input type="text" name="nama" placeholder="Masukkan nama menu" 
               class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all" required>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Harga</label>
        <div class="relative">
          <span class="absolute left-3 top-3 text-gray-500">Rp</span>
          <input type="number" name="harga" placeholder="0" 
                 class="w-full border border-gray-300 rounded-lg pl-10 pr-4 py-3 focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all" required>
        </div>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Deskripsi</label>
        <textarea name="deskripsi" placeholder="Deskripsi menu..." rows="3"
                  class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all resize-none"></textarea>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
        <select name="status_menu" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all">
          <option value="tersedia">Tersedia</option>
          <option value="habis">Habis</option>
        </select>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Foto Menu</label>
        <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-orange-500 transition-colors">
          <input type="file" name="foto" accept="image/*" class="hidden" id="addFotoInput">
          <label for="addFotoInput" class="cursor-pointer">
            <i class="fas fa-cloud-upload-alt text-3xl text-gray-400 mb-2 block"></i>
            <span class="text-sm text-gray-600">Klik untuk upload foto</span>
          </label>
        </div>
      </div>
      
      <div class="flex justify-end space-x-3 pt-4 border-t">
        <button type="button" onclick="closeAddModal()" 
                class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium">
          Batal
        </button>
        <button type="submit" 
                class="px-6 py-3 orange-btn text-white rounded-lg btn-hover font-medium">
          <i class="fas fa-save mr-2"></i>
          Simpan Menu
        </button>
      </div>
    </form>
  </div>
</div>

