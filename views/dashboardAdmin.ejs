<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .card-hover {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card-hover:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 24px rgba(249, 115, 22, 0.15);
    }

    .stat-card {
      background: linear-gradient(145deg, #ffffff, #f9fafb);
      border: 1.5px solid #e5e7eb;
      transition: all 0.3s ease;
    }

    .stat-card:hover {
      border-color: #f97316;
    }

    .chart-container {
      background: linear-gradient(145deg, #ffffff, #f9fafb);
      border: 1.5px solid #e5e7eb;
      transition: all 0.3s ease;
    }

    .chart-container:hover {
      border-color: #f97316;
    }

    .stat-icon {
      width: 50px;
      height: 50px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
    }

    .icon-revenue {
      background: linear-gradient(135deg, #10b981, #059669);
    }

    .icon-orders {
      background: linear-gradient(135deg, #3b82f6, #2563eb);
    }

    .icon-menu {
      background: linear-gradient(135deg, #a855f7, #9333ea);
    }

    .icon-tables {
      background: linear-gradient(135deg, #f97316, #ea580c);
    }

    .status-badge {
      @apply px-3 py-1 rounded-full text-xs font-medium;
    }

    .status-pending {
      @apply bg-yellow-100 text-yellow-800;
    }

    .status-completed {
      @apply bg-green-100 text-green-800;
    }

    .status-cancelled {
      @apply bg-red-100 text-red-800;
    }

    .status-processing {
      @apply bg-blue-100 text-blue-800;
    }

    .main-content {
      margin-left: 256px;
    }

    @media (max-width: 1024px) {
      .main-content {
        margin-left: 0;
      }
    }

    .dashboard-header {
      position: sticky;
      top: 0;
      z-index: 30;
      background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
      backdrop-filter: blur(8px);
      transition: box-shadow 0.3s ease;
      border-bottom: 1px solid #e5e7eb;
    }

    .dashboard-header.scrolled {
      box-shadow: 0 4px 12px rgba(249, 115, 22, 0.1);
    }

    .custom-scrollbar::-webkit-scrollbar {
      height: 8px;
      width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
      background: #f1f5f9;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
      background: #cbd5e1;
      border-radius: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
      background: #f97316;
    }

    .table-header {
      background: linear-gradient(90deg, #f3f4f6 0%, #ffffff 100%);
    }

    .table-header th {
      color: #374151;
      font-weight: 700;
      letter-spacing: 0.5px;
      padding: 14px 24px;
      font-size: 12px;
    }

    .table-body-row {
      transition: all 0.2s ease;
    }

    .table-body-row:hover {
      background-color: rgba(249, 115, 22, 0.04);
    }

    .table-body-row td {
      padding: 14px 24px;
      color: #374151;
      font-weight: 500;
    }

    .pagination-btn {
      transition: all 0.3s ease;
      border-radius: 10px;
      font-weight: 600;
    }

    .pagination-btn:hover:not(:disabled) {
      background: linear-gradient(135deg, #f97316, #ea580c);
      color: white;
      box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
    }

    .section-title {
      font-size: 18px;
      font-weight: 700;
      color: #1f2937;
    }

    .section-subtitle {
      font-size: 12px;
      color: #6b7280;
      margin-top: 4px;
    }

    .no-data {
      padding: 24px;
      text-align: center;
      color: #6b7280;
      font-size: 14px;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .stat-card {
      animation: fadeIn 0.5s ease-out;
    }
  </style>
</head>

<body class="bg-gradient-to-br from-gray-50 via-orange-50 to-red-50 min-h-screen">
  <!-- Sidebar -->
  <%- include('partials/sidebarAdmin') %>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Header -->
    <header class="dashboard-header">
      <div class="px-8 py-6">
        <div class="flex items-center space-x-4">
          <div class="w-14 h-14 bg-gradient-to-br from-orange-400 to-red-600 rounded-xl flex items-center justify-center shadow-lg">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-800">Dashboard Admin</h1>
            <p class="text-gray-600 text-sm">Pantau aktivitas dan performa bisnis Anda</p>
          </div>
        </div>
      </div>
    </header>

    <!-- Content -->
    <main class="px-8 py-8">

      <!-- Stats -->
      <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
        <!-- Revenue -->
        <div class="stat-card card-hover p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <div>
              <p class="text-sm font-medium text-gray-600">Revenue Hari Ini</p>
            </div>
            <div class="stat-icon icon-revenue">üí∞</div>
          </div>
          <p id="revenueToday" class="text-3xl font-bold text-gray-900">Rp 0</p>
          <p class="text-xs text-gray-500 mt-2">Total pendapatan hari ini</p>
        </div>

        <!-- Orders -->
        <div class="stat-card card-hover p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <div>
              <p class="text-sm font-medium text-gray-600">Total Pesanan</p>
            </div>
            <div class="stat-icon icon-orders">üì¶</div>
          </div>
          <p id="totalPesanan" class="text-3xl font-bold text-gray-900">0</p>
          <p class="text-xs text-gray-500 mt-2">Pesanan hari ini</p>
        </div>

        <!-- Menu -->
        <div class="stat-card card-hover p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <div>
              <p class="text-sm font-medium text-gray-600">Menu Aktif</p>
            </div>
            <div class="stat-icon icon-menu">üçΩÔ∏è</div>
          </div>
          <p id="menuAktif" class="text-3xl font-bold text-gray-900">0</p>
          <p class="text-xs text-gray-500 mt-2">Menu tersedia</p>
        </div>

        <!-- Tables -->
        <div class="stat-card card-hover p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <div>
              <p class="text-sm font-medium text-gray-600">Meja Terisi</p>
            </div>
            <div class="stat-icon icon-tables">ü™ë</div>
          </div>
          <p id="customerAktif" class="text-3xl font-bold text-gray-900">0</p>
          <p class="text-xs text-gray-500 mt-2">Meja terisi saat ini</p>
        </div>
      </section>

      <!-- Charts & Tables -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-10">
        <!-- Penjualan -->
        <div class="chart-container card-hover p-6 rounded-2xl shadow-sm">
          <div class="mb-6">
            <h2 class="section-title">Penjualan 7 Hari Terakhir</h2>
            <p class="section-subtitle">Rekap pendapatan harian</p>
          </div>
          <div class="overflow-y-auto custom-scrollbar max-h-64 border border-gray-200 rounded-lg">
            <table id="salesTable" class="min-w-full divide-y divide-gray-200">
              <thead class="table-header sticky top-0 z-10">
                <tr>
                  <th class="text-left">
                    <i class="fas fa-calendar-alt text-orange-600 mr-2"></i>Tanggal
                  </th>
                  <th class="text-left">
                    <i class="fas fa-money-bill-wave text-green-600 mr-2"></i>Total Revenue
                  </th>
                </tr>
              </thead>
              <tbody id="salesTableBody" class="divide-y divide-gray-100"></tbody>
            </table>
          </div>
        </div>

        <!-- Menu Terlaris -->
        <div class="chart-container card-hover p-6 rounded-2xl shadow-sm">
          <div class="mb-6">
            <h2 class="section-title">Menu Terlaris (30 Hari)</h2>
            <p class="section-subtitle">Top menu penjualan</p>
          </div>
          <div class="overflow-y-auto custom-scrollbar max-h-64 border border-gray-200 rounded-lg">
            <table id="categoriesTable" class="min-w-full divide-y divide-gray-200">
              <thead class="table-header sticky top-0 z-10">
                <tr>
                  <th class="text-left">
                    <i class="fas fa-utensils text-purple-600 mr-2"></i>Nama Menu
                  </th>
                  <th class="text-left">
                    <i class="fas fa-chart-bar text-blue-600 mr-2"></i>Total Terjual
                  </th>
                </tr>
              </thead>
              <tbody id="categoriesTableBody" class="divide-y divide-gray-100"></tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Pesanan Terbaru -->
      <section class="chart-container card-hover p-6 rounded-2xl shadow-sm">
        <div class="mb-6">
          <h2 class="section-title">Pesanan Terbaru</h2>
        </div>

        <div class="overflow-x-auto custom-scrollbar border border-gray-200 rounded-lg">
          <table class="w-full divide-y divide-gray-200">
            <thead class="table-header sticky top-0 z-10">
              <tr>
                <th class="text-left"><i class="fas fa-hashtag text-gray-600 mr-2"></i>ID Pesanan</th>
                <th class="text-left"><i class="fas fa-calendar text-orange-600 mr-2"></i>Tanggal</th>
                <th class="text-left"><i class="fas fa-info-circle text-blue-600 mr-2"></i>Status</th>
                <th class="text-left"><i class="fas fa-money-bill text-green-600 mr-2"></i>Total</th>
                <th class="text-left"><i class="fas fa-box text-purple-600 mr-2"></i>Item</th>
              </tr>
            </thead>
            <tbody id="recentActivities" class="bg-white divide-y divide-gray-100"></tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="flex justify-between items-center mt-6 border-t border-gray-200 pt-6">
          <button id="prevPage"
            class="pagination-btn px-6 py-2 bg-gray-100 text-gray-700 disabled:opacity-50 disabled:cursor-not-allowed">
            <i class="fas fa-chevron-left mr-2"></i>Sebelumnya
          </button>

          <p id="pageInfo" class="text-sm text-gray-600 select-none font-medium">Halaman 1 dari 1</p>

          <button id="nextPage"
            class="pagination-btn px-6 py-2 bg-gray-100 text-gray-700 disabled:opacity-50 disabled:cursor-not-allowed">
            Selanjutnya<i class="fas fa-chevron-right ml-2"></i>
          </button>
        </div>
      </section>

    </main>
  </div>

  <!-- Script -->
  <script>
    function formatStatus(status) {
      const s = (status || '').toLowerCase();
      const map = {
        'pending': '<span class="status-badge status-pending">Pending</span>',
        'processing': '<span class="status-badge status-processing">Diproses</span>',
        'completed': '<span class="status-badge status-completed">Selesai</span>',
        'selesai': '<span class="status-badge status-completed">Selesai</span>',
        'cancelled': '<span class="status-badge status-cancelled">Dibatalkan</span>'
      };
      return map[s] || `<span class="status-badge status-pending">${status}</span>`;
    }

    async function fetchSummary() {
      const res = await fetch('/admin/api/dashboard/summary');
      const json = await res.json();
      if (json.success) {
        document.getElementById('revenueToday').innerText = 'Rp ' + Number(json.data.revenueToday).toLocaleString('id-ID');
        document.getElementById('totalPesanan').innerText = json.data.totalPesanan.toLocaleString('id-ID');
        document.getElementById('menuAktif').innerText = json.data.menuAktif.toLocaleString('id-ID');
        document.getElementById('customerAktif').innerText = json.data.customerAktif.toLocaleString('id-ID');
      }
    }

    async function fetchSales() {
      const res = await fetch('/admin/api/dashboard/sales?range=7');
      const json = await res.json();
      const tbody = document.getElementById('salesTableBody');
      tbody.innerHTML = '';
      const data = json.data?.series || [];
      if (data.length > 0) {
        data.forEach(r => {
          tbody.innerHTML += `
            <tr class="table-body-row">
              <td class="text-gray-700">${r.date}</td>
              <td class="font-semibold text-gray-900">Rp ${Number(r.revenue).toLocaleString('id-ID')}</td>
            </tr>`;
        });
      } else {
        tbody.innerHTML = '<tr><td colspan="2" class="no-data">Belum ada data.</td></tr>';
      }
    }

    async function fetchTopMenus() {
      const res = await fetch('/admin/api/dashboard/top-menus?days=30');
      const json = await res.json();
      const tbody = document.getElementById('categoriesTableBody');
      tbody.innerHTML = '';
      const data = json.data || [];
      if (data.length > 0) {
        data.forEach(m => {
          tbody.innerHTML += `
            <tr class="table-body-row">
              <td class="text-gray-700">${m.nama_menu}</td>
              <td class="font-semibold text-gray-900">${m.total_terjual}</td>
            </tr>`;
        });
      } else {
        tbody.innerHTML = '<tr><td colspan="2" class="no-data">Belum ada data.</td></tr>';
      }
    }

    async function fetchRecentActivities(page = 1) {
    const limit = 6;
    const res = await fetch(`/admin/api/dashboard/recent-activities?page=${page}&limit=${limit}`);
    const json = await res.json();
    const tbody = document.getElementById('recentActivities');
    const pageInfo = document.getElementById('pageInfo');
    const prevBtn = document.getElementById('prevPage');
    const nextBtn = document.getElementById('nextPage');

    tbody.innerHTML = '';

    if (json.success && json.data.length > 0) {
      json.data.forEach(r => {
        tbody.innerHTML += `
          <tr class="table-body-row">
            <td class="font-medium text-gray-900">#${r.id_pesanan}</td>
            <td class="text-gray-600">${r.tanggal}</td>
            <td>${formatStatus(r.status)}</td>
            <td class="font-semibold text-gray-900">Rp ${Number(r.total_amount).toLocaleString('id-ID')}</td>
            <td class="text-gray-600">${r.items || '-'}</td>
          </tr>`;
      });

      // Update pagination state
      currentPage = json.pagination.page;
      totalPages = json.pagination.totalPages;
      pageInfo.innerText = `Halaman ${currentPage} dari ${totalPages}`;
      prevBtn.disabled = currentPage <= 1;
      nextBtn.disabled = currentPage >= totalPages;
    } else {
      tbody.innerHTML = '<tr><td colspan="5" class="no-data">Belum ada pesanan.</td></tr>';
      pageInfo.innerText = 'Halaman 1 dari 1';
      prevBtn.disabled = true;
      nextBtn.disabled = true;
    }
  }

  // Event tombol pagination
  document.getElementById('prevPage').addEventListener('click', () => {
    if (currentPage > 1) fetchRecentActivities(currentPage - 1);
  });
  document.getElementById('nextPage').addEventListener('click', () => {
    if (currentPage < totalPages) fetchRecentActivities(currentPage + 1);
  });

    document.addEventListener('DOMContentLoaded', () => {
      fetchSummary();
      fetchSales();
      fetchTopMenus();
      fetchRecentActivities();
    });

    // Scroll effect untuk header
    window.addEventListener('scroll', () => {
      const header = document.querySelector('.dashboard-header');
      if (window.scrollY > 10) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  </script>
</body>

</html>