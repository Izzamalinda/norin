<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    .card-hover { transition: all 0.3s ease; }
    .card-hover:hover { transform: translateY(-4px); box-shadow: 0 12px 24px rgba(249, 115, 22, 0.15); }
    
    .stat-card { 
      background: linear-gradient(145deg, #ffffff, #f9fafb);
      border: 1px solid #e5e7eb; 
    }
    
    .stat-card:hover {
      border-color: #f97316;
    }
    
    .chart-container { 
      background: linear-gradient(145deg, #ffffff, #f9fafb);
      border: 1px solid #e5e7eb; 
    }
    
    .status-badge { @apply px-3 py-1 rounded-full text-xs font-medium; }
    .status-pending { @apply bg-yellow-100 text-yellow-800; }
    .status-completed { @apply bg-green-100 text-green-800; }
    .status-cancelled { @apply bg-red-100 text-red-800; }
    .status-processing { @apply bg-blue-100 text-blue-800; }
    
    .main-content { margin-left: 256px; }
    @media (max-width: 1024px) { .main-content { margin-left: 0; } }
    
    .dashboard-header {
      position: sticky; top: 0; z-index: 30;
      background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
      backdrop-filter: blur(8px);
      transition: box-shadow 0.3s ease;
      border-bottom: 1px solid #e5e7eb;
    }
    
    .dashboard-header.scrolled { 
      box-shadow: 0 4px 12px rgba(249, 115, 22, 0.1); 
    }
    
    .custom-scrollbar::-webkit-scrollbar { height: 8px; width: 8px; }
    .custom-scrollbar::-webkit-scrollbar-track { background: #f1f5f9; border-radius: 4px; }
    .custom-scrollbar::-webkit-scrollbar-thumb {
      background: #cbd5e1; border-radius: 4px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover { background: #f97316; }
    
    .stat-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
    }
    
    .icon-revenue { background: linear-gradient(135deg, #10b981, #059669); }
    .icon-orders { background: linear-gradient(135deg, #3b82f6, #2563eb); }
    .icon-menu { background: linear-gradient(135deg, #a855f7, #9333ea); }
    .icon-tables { background: linear-gradient(135deg, #f97316, #ea580c); }
    
    .table-row-hover:hover {
      background-color: rgba(249, 115, 22, 0.05);
    }
    
    .section-title {
      font-size: 18px;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 6px;
    }
    
    .view-all-link {
      color: #f97316;
      transition: all 0.3s ease;
      font-weight: 600;
    }
    
    .view-all-link:hover {
      color: #ea580c;
    }
  </style>
</head>

<body class="bg-gradient-to-br from-gray-50 via-orange-50 to-red-50 min-h-screen">
  <!-- Sidebar -->
  <%- include('partials/sidebarAdmin') %>

  <div class="main-content">
    <!-- Header -->
    <header class="dashboard-header">
      <div class="px-8 py-6 flex items-center space-x-4">
        <div class="w-12 h-12 bg-gradient-to-br from-orange-400 to-red-600 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-800">Dashboard Admin</h1>
          <p class="text-gray-600 text-sm">Pantau aktivitas dan performa bisnis Anda</p>
        </div>
      </div>
    </header>

    <!-- Content -->
    <main class="px-8 py-8">

      <!-- Stats -->
      <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
        <!-- Revenue Card -->
        <div class="stat-card card-hover p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-sm font-medium text-gray-600">Revenue Hari Ini</h3>
            <div class="stat-icon icon-revenue">üí∞</div>
          </div>
          <p id="revenueToday" class="text-3xl font-bold text-gray-900">Rp 0</p>
          <p class="text-xs text-gray-500 mt-2">Total pendapatan hari ini</p>
        </div>

        <!-- Orders Card -->
        <div class="stat-card card-hover p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-sm font-medium text-gray-600">Total Pesanan</h3>
            <div class="stat-icon icon-orders">üì¶</div>
          </div>
          <p id="totalPesanan" class="text-3xl font-bold text-gray-900">0</p>
          <p class="text-xs text-gray-500 mt-2">Pesanan hari ini</p>
        </div>

        <!-- Menu Card -->
        <div class="stat-card card-hover p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-sm font-medium text-gray-600">Menu Aktif</h3>
            <div class="stat-icon icon-menu">üçΩÔ∏è</div>
          </div>
          <p id="menuAktif" class="text-3xl font-bold text-gray-900">0</p>
          <p class="text-xs text-gray-500 mt-2">Menu tersedia</p>
        </div>

        <!-- Tables Card -->
        <div class="stat-card card-hover p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-sm font-medium text-gray-600">Meja Terisi</h3>
            <div class="stat-icon icon-tables">ü™ë</div>
          </div>
          <p id="customerAktif" class="text-3xl font-bold text-gray-900">0</p>
          <p class="text-xs text-gray-500 mt-2">Meja terisi saat ini</p>
        </div>
      </section>

      <!-- Charts & Tables -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-10">
        <!-- Penjualan 7 Hari Terakhir -->
        <section class="chart-container card-hover p-6 rounded-2xl shadow-sm">
          <div class="flex items-center justify-between mb-6">
            <div>
              <h2 class="section-title">Penjualan 7 Hari Terakhir</h2>
              <p class="text-xs text-gray-500">Rekap pendapatan harian</p>
            </div>
            <a href="/admin/penjualan" class="view-all-link text-sm">
              Lihat Semua ‚Üí
            </a>
          </div>
          <div class="overflow-y-auto custom-scrollbar max-h-80 border border-gray-200 rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-gray-50 to-gray-100 sticky top-0 z-10">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Tanggal</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Pendapatan</th>
                </tr>
              </thead>
              <tbody id="salesTableBody" class="bg-white divide-y divide-gray-100"></tbody>
            </table>
          </div>
        </section>

        <!-- Kategori -->
        <section class="chart-container card-hover p-6 rounded-2xl shadow-sm">
          <div>
            <h2 class="section-title">Kategori Terlaris (30 Hari)</h2>
            <p class="text-xs text-gray-500">Top kategori penjualan</p>
          </div>
          <div class="overflow-x-auto custom-scrollbar mt-6 border border-gray-200 rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-gray-50 to-gray-100 sticky top-0 z-10">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Kategori</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Terjual</th>
                </tr>
              </thead>
              <tbody id="categoriesTableBody" class="bg-white divide-y divide-gray-100"></tbody>
            </table>
          </div>
        </section>
      </div>

      <!-- Pesanan Terbaru -->
      <section class="chart-container card-hover p-6 rounded-2xl shadow-sm">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="section-title">Pesanan Terbaru</h2>
            <p class="text-xs text-gray-500">5 pesanan terakhir</p>
          </div>
          <a href="/admin/pesanan" class="view-all-link text-sm">
            Lihat Semua ‚Üí
          </a>
        </div>

        <div class="overflow-y-auto custom-scrollbar max-h-80 border border-gray-200 rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-gray-50 to-gray-100 sticky top-0 z-10">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">ID Pesanan</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Tanggal</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Meja</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Total</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Item</th>
              </tr>
            </thead>
            <tbody id="recentActivitiesBody" class="bg-white divide-y divide-gray-100"></tbody>
          </table>
        </div>
      </section>

    </main>
  </div>

  <!-- Script -->
  <script>
    function formatStatus(status) {
      const s = (status || '').toLowerCase();
      const map = {
        'pending': '<span class="status-badge status-pending">Pending</span>',
        'processing': '<span class="status-badge status-processing">Diproses</span>',
        'completed': '<span class="status-badge status-completed">Selesai</span>',
        'selesai': '<span class="status-badge status-completed">Selesai</span>',
        'cancelled': '<span class="status-badge status-cancelled">Dibatalkan</span>'
      };
      return map[s] || `<span class="status-badge status-pending">${status}</span>`;
    }

    async function fetchSummary() {
      const res = await fetch('/admin/api/dashboard/summary');
      const json = await res.json();
      if (json.success) {
        document.getElementById('revenueToday').innerText = 'Rp ' + Number(json.data.revenueToday).toLocaleString('id-ID');
        document.getElementById('totalPesanan').innerText = json.data.totalPesanan.toLocaleString('id-ID');
        document.getElementById('menuAktif').innerText = json.data.menuAktif.toLocaleString('id-ID');
        document.getElementById('customerAktif').innerText = json.data.customerAktif.toLocaleString('id-ID');
      }
    }

    async function fetchSalesTable() {
      try {
        const res = await fetch('/admin/api/dashboard/sales?range=7');
        const json = await res.json();

        const tbody = document.getElementById('salesTableBody');
        tbody.innerHTML = '';

        if (json.success && json.data.series.length > 0) {
          json.data.series.forEach(row => {
            const tr = document.createElement('tr');
            tr.className = 'table-row-hover transition-colors cursor-pointer';
            tr.innerHTML = `
              <td class="px-6 py-4 text-sm text-gray-700 font-medium">${row.date}</td>
              <td class="px-6 py-4 text-sm font-semibold text-gray-900">Rp ${Number(row.revenue).toLocaleString('id-ID')}</td>
            `;
            tr.addEventListener('click', () => window.location.href = '/admin/penjualan');
            tbody.appendChild(tr);
          });
        } else {
          tbody.innerHTML = '<tr><td colspan="2" class="px-6 py-4 text-center text-gray-500 text-sm">Tidak ada data penjualan.</td></tr>';
        }
      } catch (err) {
        console.error('Error fetching sales table:', err);
      }
    }

    async function fetchTopCategories() {
      const res = await fetch('/admin/api/dashboard/top-categories?days=30');
      const json = await res.json();
      const tbody = document.getElementById('categoriesTableBody');
      tbody.innerHTML = '';

      const data = json.data || [];
      if (data.length > 0) {
        data.forEach(c => {
          tbody.innerHTML += `
            <tr class="table-row-hover transition-colors">
              <td class="px-6 py-4 text-sm text-gray-700 font-medium">${c.kategori || '-'}</td>
              <td class="px-6 py-4 text-sm font-semibold text-gray-900">${Number(c.total_sold || c.total).toLocaleString('id-ID')}</td>
            </tr>`;
        });
      } else {
        tbody.innerHTML = '<tr><td colspan="2" class="px-6 py-4 text-center text-gray-500 text-sm">Belum ada data.</td></tr>';
      }
    }

    async function fetchRecentActivities() {
      try {
        const res = await fetch('/admin/api/dashboard/recent-activities?limit=5');
        const json = await res.json();
        console.log("üì¶ recent-activities response:", json);

        const tbody = document.getElementById('recentActivitiesBody');
        console.log("üß© tbody ditemukan:", tbody);
        tbody.innerHTML = '';

        if (json.success && json.data.length > 0) {
          json.data.forEach(r => {
            tbody.innerHTML += `
              <tr class="table-row-hover transition-colors">
                <td class="px-6 py-4 text-sm font-medium text-gray-900">#${r.id_pesanan}</td>
                <td class="px-6 py-4 text-sm text-gray-600">${r.tanggal}</td>
                <td class="px-6 py-4 text-sm text-gray-700 font-medium">${r.nomor_meja || '-'}</td>
                <td class="px-6 py-4 text-sm">${formatStatus(r.status)}</td>
                <td class="px-6 py-4 text-sm font-semibold text-gray-900">Rp ${Number(r.total_amount).toLocaleString('id-ID')}</td>
                <td class="px-6 py-4 text-sm text-gray-600">${r.items || '-'}</td>
              </tr>`;
          });
        } else {
          tbody.innerHTML = `<tr><td colspan="6" class="px-6 py-4 text-center text-gray-500 text-sm">Belum ada pesanan.</td></tr>`;
        }
      } catch (err) {
        console.error("‚ùå Error fetchRecentActivities:", err);
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      fetchSummary();
      fetchSalesTable();
      fetchTopCategories();
      fetchRecentActivities();
    });

    // Scroll effect untuk header
    window.addEventListener('scroll', () => {
      const header = document.querySelector('.dashboard-header');
      if (window.scrollY > 10) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  </script>
</body>
</html>