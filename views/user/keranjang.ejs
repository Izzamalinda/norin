<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Keranjang - Norin Cafe</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #fef7f0 0%, #fff8f2 100%);
    }
    .glass-effect {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.9);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .gradient-text {
      background: linear-gradient(45deg, #ea580c, #fb923c);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .btn-orange {
      background: linear-gradient(to right, #f97316, #ea580c);
    }
    .btn-orange:hover {
      background: linear-gradient(to right, #ea580c, #c2410c);
    }
  </style>
</head>
<body class="min-h-screen text-gray-800 flex flex-col">

  <!-- Navbar -->
  <nav class="glass-effect flex flex-wrap justify-between items-center px-6 py-4 shadow-md sticky top-0 z-50">
    <h1 class="text-2xl md:text-3xl font-extrabold gradient-text">Norin Cafe</h1>
    <a href="/menu" class="text-orange-600 font-medium hover:underline text-sm md:text-base mt-2 md:mt-0">
      <i class="fas fa-arrow-left mr-2"></i>Kembali ke Menu
    </a>
  </nav>

  <div class="container mx-auto p-4 md:p-8 flex flex-col lg:flex-row gap-8 flex-grow">

    <!-- Bagian kiri: daftar keranjang -->
    <section class="w-full lg:w-2/3">
      <h2 class="text-2xl font-bold mb-6 gradient-text text-center lg:text-left">Keranjang Belanja</h2>

      <!-- üßæ Input Nama Pelanggan -->
<div class="flex items-center justify-between mb-4">
  <label for="namaPelanggan" class="text-sm font-semibold text-gray-700">
    Nama Pemesan:
  </label>
  <input type="text"
         id="namaPelanggan"
         class="border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-orange-400 focus:outline-none w-1/2"
         placeholder="Masukkan nama pelanggan..."
         oninput="updateNamaPelanggan()">
</div>


      <% if (keranjang.length > 0) { %>
        <% keranjang.forEach(item => { %>
          <div class="flex flex-col sm:flex-row sm:items-center justify-between glass-effect rounded-2xl shadow-md p-4 mb-4 item-row" 
            data-id-menu="<%= item.id_menu %>" data-price="<%= item.Menu?.harga || 0 %>">

            <div class="flex items-center space-x-4 mb-3 sm:mb-0">
              <img src="<%= item.Menu?.foto %>" alt="<%= item.Menu?.nama %>" 
                   class="w-20 h-20 rounded-xl object-cover shadow-md">
              <div>
                <h3 class="font-semibold text-lg"><%= item.Menu?.nama %></h3>
                <p class="text-orange-600 font-bold">Rp <%= item.Menu?.harga.toLocaleString('id-ID') %></p>
              </div>
            </div>

            <div class="flex items-center justify-end sm:justify-center space-x-3">
              <button class="bg-orange-500 text-white px-3 py-1 rounded-full shadow hover:bg-orange-600" onclick="ubahJumlah('<%= item.id_menu %>', 'kurang')">‚àí</button>
              <span id="jumlah-<%= item.id_menu %>" class="jumlah-span px-3 font-semibold text-gray-800 text-lg" data-harga="<%= item.Menu?.harga %>"><%= item.jumlah %></span>
              <button class="bg-orange-500 text-white px-3 py-1 rounded-full shadow hover:bg-orange-600" onclick="ubahJumlah('<%= item.id_menu %>', 'tambah')">+</button>
              <button class="text-red-500 hover:text-red-700 transition" onclick="hapusItem('<%= item.id_menu %>')">
                <i class="fas fa-trash"></i>
              </button>
            </div>

                        <!-- üìù Tombol tambah catatan -->
            <div class="flex justify-end sm:justify-center mt-2">
              <button type="button"
                      class="text-orange-600 text-xs font-medium hover:underline"
                      onclick="tambahCatatan('<%= item.id_menu %>')">
                + Tambah Catatan
              </button>
            </div>

            <!-- üìã Daftar catatan -->
            <div id="catatan-list-<%= item.id_menu %>" class="space-y-2 mt-2">
              <% if (item.catatan && Array.isArray(item.catatan)) { %>
                <% item.catatan.forEach((note, index) => { %>
                  <div class="flex items-start gap-2">
                    <textarea class="flex-grow border border-gray-300 rounded-xl p-2 text-sm focus:ring-2 focus:ring-orange-400 focus:outline-none"
                              rows="2"
                              onblur="simpanCatatan('<%= item.id_menu %>', <%= index %>)"><%= note %></textarea>
                    <button type="button" class="text-red-500 hover:text-red-700 mt-1"
                            onclick="hapusCatatan('<%= item.id_menu %>', <%= index %>)">
                      <i class="fas fa-times"></i>
                    </button>
                  </div>
                <% }) %>
              <% } %>
            </div>


          </div>
        <% }) %>
      <% } else { %>
        <div class="glass-effect rounded-3xl shadow-lg p-10 text-center mt-6">
          <i class="fas fa-box-open text-6xl text-gray-400 mb-4"></i>
          <p class="text-gray-600 font-medium mb-4">Keranjang kamu masih kosong üò¢</p>
          <a href="/menu" class="inline-block btn-orange text-white px-6 py-3 rounded-full shadow-md hover:scale-105 transition">
            <i class="fas fa-utensils mr-2"></i>Pesan Sekarang
          </a>
        </div>
      <% } %>
    </section>

    <!-- Bagian kanan: ringkasan -->
<aside class="w-full lg:w-1/3 glass-effect rounded-3xl shadow-md p-6 h-fit sticky top-24">
  <h3 class="text-lg md:text-xl font-bold mb-4 gradient-text text-center lg:text-left">Ringkasan Pesanan</h3>

  <div class="flex justify-between text-sm md:text-base mb-2">
    <span id="totalItem"><%= keranjang.length %> item</span>
    <span id="totalHarga">Rp <%= totalHarga.toLocaleString('id-ID') %></span>
  </div>

  <div class="flex justify-between font-bold text-lg border-t border-gray-200 pt-3 mb-2">
    <span>Total</span>
    <span id="totalHargaBesar" class="text-orange-600">Rp <%= totalHarga.toLocaleString('id-ID') %></span>
  </div>

  <!-- üßæ Tambahan tulisan "Bayar di Kasir" -->
  <p class="text-center text-sm font-semibold text-[#9a3412] mb-4">
    üíµ Bayar langsung di <span class="text-orange-500 font-bold">Kasir</span>
  </p>

  <button id="btnCheckout" 
    class="w-full btn-orange text-white py-3 rounded-full font-semibold shadow-md hover:scale-105 transition">
    <i class="fas fa-check-circle mr-2"></i>Checkout Sekarang
  </button>
</aside>


  <!-- Modal Konfirmasi Checkout -->
  <div id="checkoutModal" class="fixed inset-0 hidden bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl p-8 shadow-2xl w-80 text-center">
      <h2 class="text-xl font-bold mb-3 text-gray-800">Konfirmasi Checkout</h2>
      <p class="text-gray-600 mb-6">Yakin ingin melanjutkan pesanan ini?</p>
      <div class="flex justify-center gap-4">
        <button id="cancelCheckout" class="px-5 py-2 rounded-lg border border-gray-300 text-gray-600 hover:bg-gray-100 transition">Batal</button>
        <button id="confirmCheckout" class="px-5 py-2 rounded-lg bg-orange-500 text-white hover:bg-orange-600 transition">Ya, Lanjutkan</button>
      </div>
    </div>
  </div>

  <script>
  function formatRupiah(num) {
    return "Rp " + Number(num).toLocaleString("id-ID");
  }

  function updateRingkasan(keranjangData = null) {
    let totalItem = 0, totalHarga = 0;
    if (keranjangData) {
      totalItem = keranjangData.reduce((s, i) => s + i.jumlah, 0);
      totalHarga = keranjangData.reduce((s, i) => s + i.total_harga, 0);
    } else {
      document.querySelectorAll("[id^='jumlah-']").forEach(el => {
        const jumlah = parseInt(el.textContent) || 0;
        const harga = parseInt(el.dataset.harga) || 0;
        totalItem += jumlah;
        totalHarga += jumlah * harga;
      });
    }
    document.querySelector("#totalItem").textContent = `${totalItem} item`;
    document.querySelector("#totalHarga").textContent = formatRupiah(totalHarga);
    document.querySelector("#totalHargaBesar").textContent = formatRupiah(totalHarga);
  }

  async function ubahJumlah(id_menu, action) {
    const jumlahEl = document.querySelector(`#jumlah-${id_menu}`);
    const parent = jumlahEl.closest(".item-row");
    const res = await fetch("/keranjang/update", {
      method: "PATCH",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ id_menu, action }),
    });
    const data = await res.json();
    if (res.ok) {
      if (data.keranjang) {
        const updated = data.keranjang.find(i => i.id_menu === id_menu);
        if (!updated) parent.remove();
        else jumlahEl.textContent = updated.jumlah;
        updateRingkasan(data.keranjang);
      }
    } else alert("‚ùå Gagal memperbarui jumlah");
  }

  async function hapusItem(id_menu) {
    if (!confirm("Hapus item ini?")) return;
    const res = await fetch(`/keranjang/${id_menu}`, { method: "DELETE" });
    if (res.ok) {
      document.querySelector(`[data-id-menu='${id_menu}']`).remove();
      updateRingkasan();
    } else alert("‚ùå Gagal menghapus item");
  }

function tambahCatatan(id_menu) {
  const list = document.getElementById(`catatan-list-${id_menu}`);
  const jumlahItem = parseInt(document.querySelector(`#jumlah-${id_menu}`).textContent) || 0;
  const existingNotes = list.querySelectorAll("textarea").length;

  // üö´ Batasi jumlah catatan tidak boleh lebih dari jumlah item
  if (existingNotes >= jumlahItem) {
    Swal.fire({
      icon: "warning",
      title: "Batas Tercapai",
      text: `Kamu hanya bisa menambahkan ${jumlahItem} catatan untuk item ini.`,
      confirmButtonColor: "#f97316",
    });
    return;
  }

  const index = existingNotes;
  const div = document.createElement("div");
  div.className = "flex items-start gap-2";
  div.innerHTML = `
    <textarea class="flex-grow border border-gray-300 rounded-xl p-2 text-sm focus:ring-2 focus:ring-orange-400 focus:outline-none"
              rows="2"
              placeholder="Tulis catatan di sini..."
              onblur="simpanCatatan('${id_menu}', ${index})"></textarea>
    <button type="button" class="text-red-500 hover:text-red-700 mt-1"
            onclick="hapusCatatan('${id_menu}', ${index})">
      <i class="fas fa-times"></i>
    </button>
  `;
  list.appendChild(div);
}


// üíæ Simpan atau update catatan ke server
async function simpanCatatan(id_menu, index) {
  const list = document.getElementById(`catatan-list-${id_menu}`);
  const textareaEls = list.querySelectorAll("textarea");
  const catatan = Array.from(textareaEls).map(el => el.value.trim());

  try {
    const res = await fetch("/keranjang/catatan", {
      method: "PATCH",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ id_menu, catatan }),
    });
    if (!res.ok) throw new Error("Gagal menyimpan catatan");
    const data = await res.json();
    console.log("‚úÖ Catatan diperbarui:", data);
  } catch (err) {
    console.error(err);
    Swal.fire({
      icon: "error",
      title: "Oops!",
      text: "Gagal menyimpan catatan.",
      confirmButtonColor: "#ef4444",
    });
  }
}

// ‚ùå Hapus satu catatan
async function hapusCatatan(id_menu, index) {
  const list = document.getElementById(`catatan-list-${id_menu}`);
  const rows = Array.from(list.children);
  if (rows[index]) rows[index].remove();
  simpanCatatan(id_menu);
}

// üß† Variabel global untuk menyimpan nama pelanggan
let namaPelanggan = "";
let nomorMeja = ''; // bisa kamu ubah dinamis kalau sistemmu punya data nomor meja

// üöÄ Inisialisasi awal saat halaman dibuka
document.addEventListener("DOMContentLoaded", () => {
  const inputNama = document.getElementById("namaPelanggan");
  // Set default ke nomor meja
  inputNama.value = nomorMeja;
  // Update variabel global juga
  namaPelanggan = nomorMeja;
});

// ‚úèÔ∏è Fungsi untuk memperbarui nama pelanggan
function updateNamaPelanggan() {
  const input = document.getElementById("namaPelanggan");
  const nama = input.value.trim();

  if (nama === "" || nama.toLowerCase().includes(nomorMeja.toLowerCase())) {
    // kalau kosong atau cuma isi "Meja 1", simpan default meja
    namaPelanggan = nomorMeja;
  } else {
    // kalau isi nama, gabungkan dengan meja
    namaPelanggan = `${nama} - ${nomorMeja}`;
  }

  console.log("Nama pelanggan sekarang:", namaPelanggan);
}


  const modal = document.getElementById("checkoutModal");
  document.getElementById("btnCheckout").addEventListener("click", () => modal.classList.remove("hidden"));
  document.getElementById("cancelCheckout").addEventListener("click", () => modal.classList.add("hidden"));
  document.getElementById("confirmCheckout").addEventListener("click", async () => {
    modal.classList.add("hidden");
    const res = await fetch("/keranjang/checkout", { method: "POST", headers: { "Content-Type": "application/json" }});
    const data = await res.json();
    if (res.ok) {
  // ‚úÖ Popup SweetAlert2 modern
  Swal.fire({
    title: "Pesanan Berhasil!",
    text: "Silahkan Melakukan Pembayaran ke Kasirüòä",
    icon: "success",
    confirmButtonText: "Lihat Status Pesanan",
    confirmButtonColor: "#f97316", // orange Norin Cafe
    background: "#fffaf5",
  }).then(() => {
    // üî∏ Bersihkan keranjang dan redirect setelah user klik tombol
    Object.keys(localStorage)
      .filter(k => k.startsWith("keranjang-"))
      .forEach(k => localStorage.removeItem(k));
    localStorage.setItem("keranjang-last-update", Date.now());
    window.location.href = `/pesanan/status/${data.id_meja}`;
  });
} else {
  // ‚ùå Ganti alert error juga biar lebih rapi
  Swal.fire({
    title: "Gagal!",
    text: data.message || "Terjadi kesalahan saat membuat pesanan",
    icon: "error",
    confirmButtonColor: "#ef4444",
  });
}
  });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
