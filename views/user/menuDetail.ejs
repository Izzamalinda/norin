<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Detail Menu: <%= menu.nama %></title> 
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      /* Warna latar belakang sesuai estetika kode frontend (putih-krem gradien) */
      background: linear-gradient(135deg, #fef7f0 0%, #fff8f2 100%); 
    }
    .glass-effect {
      /* Efek kaca pada background card/container */
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.9);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .gradient-text {
      /* Warna gradien oranye untuk judul/teks utama */
      background: linear-gradient(45deg, #ea580c, #fb923c); /* orange-600 ke orange-400 */
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
  </style>
</head>
<body class="min-h-screen text-gray-800 flex justify-center items-start pt-16">

  <div class="container mx-auto max-w-4xl p-8">
    
    <a href="/menu" class="text-orange-600 hover:text-orange-800 font-semibold mb-6 inline-flex items-center transition duration-300">
        <i class="fas fa-arrow-left mr-2"></i> Kembali ke daftar menu
    </a>

    <div class="glass-effect p-8 rounded-3xl shadow-2xl border flex flex-col md:flex-row gap-8 mt-4">

      <div class="md:w-1/2">
        <div class="relative overflow-hidden rounded-2xl shadow-lg">
          <img src="<%= menu.foto %>" 
               alt="<%= menu.nama %>" class="w-full h-80 object-cover">
          
          <% if (menu.status_menu && menu.status_menu !== 'Tersedia') { %>
            <div class="absolute top-3 right-3 bg-red-500 text-white px-4 py-1 rounded-full text-sm font-semibold shadow-md">
              <%= menu.status_menu %>
            </div>
          <% } %>
        </div>
      </div>

      <div class="md:w-1/2 flex flex-col justify-between">
        <div>
          <h1 class="text-4xl font-extrabold mb-4 gradient-text"><%= menu.nama %></h1>
          
          <p class="text-3xl text-orange-600 font-bold mb-6">
            Rp <%= menu.harga.toLocaleString('id-ID') %>
          </p>
          
          <h2 class="text-xl font-bold mb-2">Deskripsi</h2>
          <p class="text-gray-700 mb-6 leading-relaxed">
            <%= menu.deskripsi || 'Tidak ada deskripsi yang tersedia untuk menu ini.' %>
          </p>

          <div class="space-y-3">
            <div class="flex items-center">
              <i class="fas fa-tag text-orange-500 w-6"></i>
              <p class="font-medium text-gray-700">Kategori: <span class="text-gray-900 font-semibold"><%= menu.kategori || '-' %></span></p>
            </div>
            <div class="flex items-center">
              <i class="fas fa-check-circle text-green-500 w-6"></i>
              <p class="font-medium text-gray-700">Status Stok: <span class="font-semibold <%= menu.status_menu === 'Tersedia' ? 'text-green-600' : 'text-red-600' %>"><%= menu.status_menu || 'Tidak Diketahui' %></span></p>
            </div>
          </div>
        </div>

        <div class="mt-8">
          <div data-menu-id="<%= menu.id_menu %>" class="w-full">
            <button class="btn-pesan w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white py-3 rounded-full">
              <i class="fas fa-shopping-cart mr-2"></i> Tambah ke Keranjang
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
/* =====================================
   ðŸ”¸ Helper: Format Rupiah
===================================== */
function formatCurrency(n) {
  return 'Rp ' + Number(n).toLocaleString('id-ID');
}

/* =====================================
   ðŸ”¸ Helper: Buat Kontrol + / âˆ’
===================================== */
function createQtyControls(id_menu, jumlah) {
  const wrapper = document.createElement('div');
  wrapper.className = 'flex justify-between items-center w-full';
  wrapper.innerHTML = `
    <button class="btn-kurang bg-orange-500 px-3 rounded-full text-white">âˆ’</button>
    <span id="jumlah-${id_menu}" class="px-2 font-semibold">${jumlah}</span>
    <button class="btn-tambah bg-orange-500 px-3 rounded-full text-white">+</button>
  `;

  // Tombol Kurang
  wrapper.querySelector('.btn-kurang').addEventListener('click', async (e) => {
    e.stopPropagation();
    await changeQty(id_menu, 'kurang', wrapper);
  });

  // Tombol Tambah
  wrapper.querySelector('.btn-tambah').addEventListener('click', async (e) => {
    e.stopPropagation();
    await changeQty(id_menu, 'tambah', wrapper);
  });

  return wrapper;
}

/* =====================================
   ðŸ”¸ Ganti ke Kontrol + / âˆ’
===================================== */
async function replaceWithControls(container, id_menu, jumlah) {
  container.innerHTML = '';
  const controls = createQtyControls(id_menu, jumlah);
  container.appendChild(controls);
  localStorage.setItem(`keranjang-${id_menu}`, jumlah);
  localStorage.setItem('keranjang-last-update', Date.now());
}

/* =====================================
   ðŸ”¸ Ganti ke Tombol Pesan
===================================== */
function replaceWithPesanButton(container, id_menu) {
  container.innerHTML = `
    <button class="btn-pesan w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white py-3 rounded-full shadow-md flex items-center justify-center">
      <i class="fas fa-shopping-cart mr-2"></i> Tambah ke Keranjang
    </button>`;
  attachPesanListener(container);
}

/* =====================================
   ðŸ”¸ Listener Tombol Pesan
===================================== */
function attachPesanListener(container) {
  const id_menu = container.dataset.menuId;
  const btn = container.querySelector('.btn-pesan');
  if (!btn) return;

  btn.addEventListener('click', async (e) => {
    e.stopPropagation();
    btn.disabled = true;
    const res = await fetch('/keranjang/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id_menu })
    });
    const data = await res.json();
    btn.disabled = false;

    if (res.ok && data.jumlah !== undefined) {
      replaceWithControls(container, id_menu, data.jumlah);
    } else {
      replaceWithControls(container, id_menu, 1);
    }
  });
}

/* =====================================
   ðŸ”¸ Update Jumlah (+ / âˆ’)
===================================== */
async function changeQty(id_menu, action, wrapperDom) {
  const res = await fetch('/keranjang/update', {
    method: 'PATCH',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ id_menu, action })
  });

  const data = await res.json();

  if (res.ok) {
    if (data.removed) {
      // Jika jumlah 0, hapus dari localStorage dan ubah jadi tombol pesan
      localStorage.removeItem(`keranjang-${id_menu}`);
      replaceWithPesanButton(wrapperDom.parentElement, id_menu);
    } else if (data.jumlah !== undefined) {
      // Update jumlah di UI dan localStorage
      const span = wrapperDom.querySelector(`#jumlah-${id_menu}`);
      if (span) span.textContent = data.jumlah;
      localStorage.setItem(`keranjang-${id_menu}`, data.jumlah);
    }
    localStorage.setItem('keranjang-last-update', Date.now());
  } else {
    alert(data.message || 'Gagal mengubah jumlah');
  }
}

/* =====================================
   ðŸ”¸ Inisialisasi Saat Page Load
===================================== */
const container = document.querySelector('[data-menu-id]');
const id_menu = container.dataset.menuId;

// Jika sudah ada di keranjang sebelumnya
const savedQty = localStorage.getItem(`keranjang-${id_menu}`);
if (savedQty) {
  container.innerHTML = '';
  container.appendChild(createQtyControls(id_menu, savedQty));
} else {
  attachPesanListener(container);
}

/* =====================================
   ðŸ”¸ Sinkron Antar-Tab (menuUser â†” menuDetail â†” keranjang)
===================================== */
window.addEventListener('storage', (e) => {
  if (!e.key) return;
  if (e.key.startsWith('keranjang-')) {
    const id = e.key.split('-')[1];
    if (id !== id_menu) return;
    if (e.newValue) {
      container.innerHTML = '';
      container.appendChild(createQtyControls(id_menu, e.newValue));
    } else {
      replaceWithPesanButton(container, id_menu);
    }
  }
});
</script>

</body>
</html>