<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Menu Norin Cafe</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #fef7f0 0%, #fff8f2 100%);
    }
    .glass-effect {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.9);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .card-hover {
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .card-hover:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }
    .gradient-text {
      background: linear-gradient(45deg, #ea580c, #fb923c);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .search-input {
      border: 2px solid #fdba74;
      transition: all 0.3s;
    }
    .search-input:focus {
      border-color: transparent;
      box-shadow: 0 0 0 2px #f97316;
    }
  </style>
</head>
<body class="min-h-screen text-gray-800">

  <!-- ‚úÖ Navbar -->
  <nav class="glass-effect flex flex-col md:flex-row justify-between items-center px-4 md:px-8 py-4 shadow-lg sticky top-0 z-50">
    <h1 class="text-2xl md:text-3xl font-extrabold gradient-text text-center md:text-left mb-3 md:mb-0">
      Pemesanan Makanan <span class="block md:inline">Norin Cafe</span>
    </h1>

    <!-- ‚úÖ Search -->
    <form action="/menu/search/find" method="get" class="relative w-full md:w-72">
      <input name="keyword" type="text" placeholder="Cari menu..." 
        class="search-input w-full px-5 py-3 rounded-full border focus:outline-none shadow-md"
        value="<%= typeof keyword !== 'undefined' ? keyword : '' %>">
      <button type="submit" class="absolute right-4 top-3 text-orange-500 hover:text-orange-700 transition">
        <i class="fas fa-search text-lg"></i>
      </button>
    </form>
  </nav>

  <!-- ‚úÖ Container utama -->
  <div class="container mx-auto px-4 md:px-8 py-6 flex flex-col lg:flex-row gap-6">

    <!-- ‚úÖ Sidebar (jadi horizontal di HP) -->
    <!-- ‚úÖ Sidebar / Kategori Menu -->
<aside 
    class="glass-effect w-full lg:w-1/4 p-4 md:p-6 rounded-3xl shadow-xl border h-fit lg:sticky lg:top-28 
           text-center lg:text-left z-10 lg:z-0">
    <h2 class="font-bold text-lg md:text-xl mb-4 gradient-text">Kategori Menu</h2>
    <ul class="flex flex-wrap justify-center gap-4 lg:block lg:space-y-3 text-base md:text-lg">
      <li>
        <a href="/menu/kategori/makanan" 
           class="inline-flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-orange-100 hover:text-orange-600 transition">
          <i class="fas fa-utensils"></i>
          <span>Makanan</span>
          <span class="text-sm font-semibold text-gray-500">
            (<%= typeof makananCount !== 'undefined' ? makananCount : '?' %>)
          </span>
        </a>
      </li>
      <li>
        <a href="/menu/kategori/minuman" 
           class="inline-flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-orange-100 hover:text-orange-600 transition">
          <i class="fas fa-coffee"></i>
          <span>Minuman</span>
          <span class="text-sm font-semibold text-gray-500">
            (<%= typeof minumanCount !== 'undefined' ? minumanCount : '?' %>)
          </span>
        </a>
      </li>
      <li>
        <a href="/menu/kategori/cemilan" 
           class="inline-flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-orange-100 hover:text-orange-600 transition">
          <i class="fas fa-cookie-bite"></i>
          <span>Cemilan</span>
          <span class="text-sm font-semibold text-gray-500">
            (<%= typeof cemilanCount !== 'undefined' ? cemilanCount : '?' %>)
          </span>
        </a>
      </li>
    </ul>

    <a href="/keranjang/view" 
      class="mt-6 w-full block bg-gradient-to-r from-orange-500 to-orange-600 text-white py-3 rounded-full text-center 
             hover:from-orange-600 hover:to-orange-700 transition shadow-lg transform hover:scale-105">
      <i class="fas fa-shopping-cart mr-2"></i>Keranjang
    </a>
  </aside>

<!-- ‚úÖ Daftar Menu -->
<section class="w-full lg:w-3/4 relative z-0">
    <% if (no_meja) { %>
      <div class="bg-green-100 text-green-800 p-3 rounded-md text-center mb-4 shadow text-sm md:text-base">
        üçΩÔ∏è Anda sedang memesan dari <b>Meja <%= no_meja %></b>
      </div>
    <% } %>
    <h1 class="text-2xl md:text-3xl font-extrabold gradient-text mb-6 text-center lg:text-left">
      Menu Tersedia
    </h1>

  <!-- ‚úÖ Ubah grid: 2 kolom di HP, 3 di desktop -->
  <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-8">
    <% if (menus && menus.length > 0) { %>
      <% menus.forEach(menu => { %>
        <div class="glass-effect p-4 md:p-6 rounded-3xl shadow-xl border card-hover flex flex-col justify-between">
          <div>
            <div class="relative overflow-hidden rounded-2xl mb-3">
              <img 
                src="<%= menu.foto %>" 
                alt="<%= menu.nama %>" 
                class="w-full h-36 sm:h-44 md:h-52 object-cover transition duration-500 hover:scale-110">
              <% if (menu.status === 'Best Seller') { %>
                <div class="absolute top-2 right-2 bg-red-500 text-white px-2 py-1 rounded-full text-xs font-semibold">
                  <%= menu.status %>
                </div>
              <% } %>
            </div>

            <h3 class="text-sm sm:text-base md:text-lg font-bold mb-1"><%= menu.nama %></h3>
            <% if (menu.deskripsi) { %>
              <p class="text-xs sm:text-sm text-gray-600 mb-2 line-clamp-2"><%= menu.deskripsi %></p>
            <% } %>
            <p class="text-orange-600 font-bold text-sm sm:text-base md:text-lg mb-3">Rp <%= menu.harga.toLocaleString('id-ID') %></p>
          </div>

          <div class="flex space-x-2 sm:space-x-4">
            <a href="/menu/<%= menu.id_menu %>" class="flex-1 text-center border-2 border-orange-500 text-orange-600 py-2 rounded-full text-xs sm:text-sm font-medium">
              Detail
            </a>

            <% const itemInCart = (keranjang || []).find(i => i.id_menu === menu.id_menu); %>
            <div class="flex-1" data-menu-id="<%= menu.id_menu %>">
              <% if (itemInCart) { %>
                <div class="flex justify-between items-center w-full">
                  <button class="btn-kurang bg-orange-500 px-2 sm:px-3 rounded-full text-white text-sm">‚àí</button>
                  <span id="jumlah-<%= menu.id_menu %>" class="px-1 sm:px-2 font-semibold"><%= itemInCart.jumlah %></span>
                  <button class="btn-tambah bg-orange-500 px-2 sm:px-3 rounded-full text-white text-sm">+</button>
                </div>
              <% } else { %>
                <button class="btn-pesan w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white py-2 rounded-full shadow-md flex items-center justify-center text-xs sm:text-sm">
                  <i class="fas fa-plus mr-1 sm:mr-2"></i>Pesan
                </button>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-span-full glass-effect p-8 rounded-3xl shadow-xl border text-center">
        <i class="fas fa-box-open text-5xl md:text-6xl text-gray-400 mb-4"></i>
        <p class="text-lg font-semibold text-gray-600">Tidak ada menu tersedia.</p>
      </div>
    <% } %>
  </div>
</section>
  </div>

  <script>
/* ---- Helper global ---- */
function createQtyControls(id_menu, jumlah) {
  const wrapper = document.createElement('div');
  wrapper.className = 'flex justify-between items-center w-full';
  wrapper.innerHTML = `
    <button class="btn-kurang bg-orange-500 px-3 rounded-full text-white">‚àí</button>
    <span id="jumlah-${id_menu}" class="px-2 font-semibold">${jumlah}</span>
    <button class="btn-tambah bg-orange-500 px-3 rounded-full text-white">+</button>
  `;

  wrapper.querySelector('.btn-kurang').addEventListener('click', async (e) => {
    e.stopPropagation();
    await changeQtyFromContainer(id_menu, 'kurang', wrapper);
  });
  wrapper.querySelector('.btn-tambah').addEventListener('click', async (e) => {
    e.stopPropagation();
    await changeQtyFromContainer(id_menu, 'tambah', wrapper);
  });
  return wrapper;
}

async function replaceWithControls(container, id_menu, jumlah) {
  container.innerHTML = '';
  container.appendChild(createQtyControls(id_menu, jumlah));
}

function replaceWithPesanButton(container, id_menu) {
  container.innerHTML = `
    <button class="btn-pesan w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white py-3 rounded-full shadow-md flex items-center justify-center">
      <i class="fas fa-plus mr-2"></i>Pesan
    </button>`;
  attachPesanListener(container);
}

function attachPesanListener(container) {
  const id_menu = container.dataset.menuId;
  const btn = container.querySelector('.btn-pesan');
  if (!btn) return;

  btn.addEventListener('click', async (e) => {
    e.stopPropagation();
    btn.disabled = true;
    const res = await fetch('/keranjang/add', {
      method: 'POST',
      headers: {'Content-Type':'application/json'},
      body: JSON.stringify({ id_menu })
    });
    const data = await res.json();
    btn.disabled = false;
    if (res.ok) {
      await replaceWithControls(container, id_menu, 1);
    } else {
      alert(data.message || 'Gagal menambah ke keranjang');
    }
  });
}

async function changeQtyFromContainer(id_menu, action, wrapperDom) {
  const res = await fetch('/keranjang/update', {
    method: 'PATCH',
    headers: {'Content-Type':'application/json'},
    body: JSON.stringify({ id_menu, action })
  });
  const data = await res.json();

  if (res.ok) {
    if (data.keranjang) {
      const item = data.keranjang.find(i => i.id_menu === id_menu);
      if (item) {
        wrapperDom.querySelector(`#jumlah-${id_menu}`).textContent = item.jumlah;
      } else {
        replaceWithPesanButton(wrapperDom.parentElement, id_menu);
      }
    }
  } else {
    alert(data.message || 'Gagal update jumlah');
  }
}

/* === Inisialisasi === */
document.querySelectorAll('[data-menu-id]').forEach(container => {
  attachPesanListener(container);
});

document.querySelectorAll('.btn-pesan').forEach(btn => {
  const container = btn.closest('[data-menu-id]');
  attachPesanListener(container);
});

document.querySelectorAll('.btn-kurang').forEach(btn => {
  const container = btn.closest('[data-menu-id]');
  btn.addEventListener('click', () => {
    changeQtyFromContainer(container.dataset.menuId, 'kurang', container);
  });
});

document.querySelectorAll('.btn-tambah').forEach(btn => {
  const container = btn.closest('[data-menu-id]');
  btn.addEventListener('click', () => {
    changeQtyFromContainer(container.dataset.menuId, 'tambah', container);
  });
});

</script>


  </body>
</html>