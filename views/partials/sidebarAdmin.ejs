<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <script src="/socket.io/socket.io.js?v=1"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .sidebar-gradient {
      background: linear-gradient(135deg, #1f2937 0%, #374151 50%, #4b5563 100%);
    }
    
    .menu-item {
      position: relative;
      overflow: hidden;
    }
    
    .menu-item::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
      transition: left 0.5s;
    }
    
    .menu-item:hover::before {
      left: 100%;
    }
    
    .profile-glow {
      box-shadow: 0 0 30px rgba(249, 115, 22, 0.3);
      animation: pulse-glow 2s infinite;
    }
    
    @keyframes pulse-glow {
      0%, 100% { box-shadow: 0 0 30px rgba(249, 115, 22, 0.3); }
      50% { box-shadow: 0 0 40px rgba(249, 115, 22, 0.5); }
    }
    
    .glass-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
  </style>
</head>
<body class="bg-gradient-to-br from-gray-100 via-orange-50 to-red-50 text-gray-800 min-h-screen flex">

  <!-- partials/sidebarAdmin.ejs -->
<aside 
  class="w-64 h-screen fixed top-0 left-0 sidebar-gradient text-white shadow-2xl z-50 flex flex-col justify-between overflow-hidden">

  <!-- Background Decoration -->
  <div class="absolute top-0 right-0 w-40 h-40 bg-orange-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-32 h-32 bg-red-500/10 rounded-full blur-2xl"></div>

  <!-- Wrapper isi sidebar -->
  <div class="relative z-10 h-full flex flex-col justify-between select-none">

    <!-- Top Section -->
    <div class="p-6">
      <!-- Brand Header -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-orange-400 to-red-600 rounded-2xl mb-4 shadow-xl">
          <i class="fas fa-utensils text-white text-2xl"></i>
        </div>
        <h1 class="text-xl font-bold bg-gradient-to-r from-orange-300 to-red-300 bg-clip-text text-transparent">
          Food Admin
        </h1>
      </div>

      <!-- Admin Profile -->
      <div class="glass-card rounded-2xl p-4 mb-8">
        <div class="flex flex-col items-center">
          <div class="w-20 h-20 rounded-full bg-gradient-to-br from-orange-400 to-red-500 profile-glow flex items-center justify-center">
            <i class="fas fa-user-tie text-white text-xl"></i>
          </div>
          <p class="font-semibold mt-3 text-base">Admin</p>
          <div class="mt-1 inline-flex items-center space-x-2 text-xs">
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
            <span class="text-green-300">Online</span>
          </div>
        </div>
      </div>

      <!-- Menu Navigasi -->
      <nav class="flex flex-col space-y-3 relative">
        <!-- Dashboard -->
        <a href="/admin" id="menu-dashboard"
          class="menu-item bg-white/10 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3 hover:bg-gradient-to-r hover:from-orange-500 hover:to-red-600">
          <i class="fas fa-chart-pie text-lg"></i>
          <span>Dashboard</span>
        </a>

        <!-- Kelola Menu -->
        <a href="/admin/kelola-menu" id="menu-kelola"
          class="menu-item bg-white/10 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3 hover:bg-gradient-to-r hover:from-orange-500 hover:to-red-600">
          <i class="fas fa-utensils text-lg"></i>
          <span>Kelola Menu</span>
        </a>

        <!-- Pesanan (dengan badge) -->
        <a href="/admin/daftar-pesanan" id="menu-pesanan"
          class="menu-item relative bg-white/10 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3 hover:bg-gradient-to-r hover:from-orange-500 hover:to-red-600">
          <i class="fas fa-shopping-cart text-lg"></i>
          <span id="pesananText">Pesanan</span>
        </a>


        <script>
          function updateBadge() {
            fetch("/pesanan/jumlah-pesanan")
              .then(res => res.json())
              .then(data => {
                const badge = document.getElementById("pesananBadge");

                if (data.total > 0) {
                  badge.innerText = data.total;
                  badge.classList.remove("hidden");
                } else {
                  badge.classList.add("hidden");
                }
              })
              .catch(err => console.error("Error fetch jumlah pesanan:", err));
          }

          // Jalankan pertama kali
          updateBadge();

          // Perbarui setiap 5 detik
          setInterval(updateBadge, 5000);
        </script>


        <!-- Takeaway -->
          <a href="/menu?meja=0" 
            class="menu-item bg-white/10 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3 hover:bg-gradient-to-r hover:from-green-500 hover:to-blue-500">
            <i class="fas fa-shopping-bag text-lg"></i>
            <span>Takeaway</span>
          </a>


        <!-- Meja -->
        <a href="/meja/list" id="menu-meja"
          class="menu-item bg-white/10 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3 hover:bg-gradient-to-r hover:from-orange-500 hover:to-red-600">
          <i class="fas fa-qrcode text-lg"></i>
          <span>Daftar Meja</span>
        </a>

        <!-- Logout -->
        <a href="/logout"
          class="menu-item bg-gradient-to-r from-red-600 to-red-700 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3 mt-8 shadow-lg hover:from-red-700 hover:to-red-800">
          <i class="fas fa-sign-out-alt text-lg"></i>
          <span>Logout</span>
        </a>
      </nav>
    </div>

    <!-- Bottom Section -->
    <div class="p-6 border-t border-white/10 relative z-10">
      <p class="text-center text-xs text-gray-400">&copy; 2024 Food Admin System</p>
    </div>
  </div>
</aside>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // =======================
    // ðŸ”¶ Highlight menu aktif
    // =======================
    const menus = {
      dashboard: document.getElementById('menu-dashboard'),
      kelola: document.getElementById('menu-kelola'),
      pesanan: document.getElementById('menu-pesanan'),
      meja: document.getElementById('menu-meja')
    };

    Object.values(menus).forEach(menu => {
      menu.className = 'menu-item bg-white/10 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3 hover:bg-gradient-to-r hover:from-orange-500 hover:to-red-600';
    });

    const path = window.location.pathname;
    if (path === '/admin' || path === '/admin/' || path.startsWith('/admin/api') || path.startsWith('/admin/dashboard')) {
      menus.dashboard.classList.add('bg-gradient-to-r', 'from-orange-500', 'to-red-600', 'shadow-lg');
    } else if (path.startsWith('/admin/kelola-menu')) {
      menus.kelola.classList.add('bg-gradient-to-r', 'from-orange-500', 'to-red-600', 'shadow-lg');
    } else if (path.startsWith('/admin/daftar-pesanan')) {
      menus.pesanan.classList.add('bg-gradient-to-r', 'from-orange-500', 'to-red-600', 'shadow-lg');
    } else if (path.startsWith('/meja')) {
      menus.meja.classList.add('bg-gradient-to-r', 'from-orange-500', 'to-red-600', 'shadow-lg');
    }

    // // =====================================
    // // ðŸ”” Socket.IO untuk notifikasi pesanan baru (namespace: /admin)
    // // =====================================
    const socket = io("/admin", {
      transports: ["websocket"],
    });

    const badge = document.getElementById('pesananBadge');
    let pesananCount = 0;

    // ðŸ” Log koneksi
    socket.on('connect', () => {
      console.log("âœ… Admin connected ke /admin namespace:", socket.id);
      socket.emit("test"); // kirim test ke server
    });

    socket.on('connect_error', (err) => {
      console.error("âŒ Gagal konek ke Socket.IO /admin:", err.message);
    });

    socket.on('disconnect', () => {
      console.warn("âš ï¸ Admin terputus dari Socket.IO server");
    });

    // ðŸ”¥ Event pesanan baru (realtime)
    socket.on('pesananBaru', (data) => {
      console.log("ðŸ”¥ Event pesananBaru diterima di admin:", data);
      pesananCount++;
      badge.textContent = pesananCount;
      badge.classList.remove('hidden');
      badge.classList.add('animate-pulse');
      showToast(`Pesanan baru dari Meja ${data.no_meja || '???'}`);
    });

    // âœ… Mini toast notifikasi
    function showToast(message) {
      const toast = document.createElement('div');
      toast.textContent = message;
      toast.className = "fixed bottom-5 right-5 bg-orange-500 text-white px-4 py-2 rounded-lg shadow-lg text-sm animate-bounce";
      document.body.appendChild(toast);
      setTimeout(() => toast.remove(), 3500);
    }
  });
</script>

<script>
  async function updatePesananLabel() {
    try {
      const res = await fetch("/pesanan/jumlah-pesanan");
      const data = await res.json();

      const textElement = document.getElementById("pesananText");

      if (data.total > 0) {
        textElement.innerHTML = `Pesanan (${data.total})`;
      } else {
        textElement.innerHTML = "Pesanan";
      }
    } catch (err) {
      console.error("Gagal cek pesanan:", err);
    }
  }

  updatePesananLabel();
  setInterval(updatePesananLabel, 5000);
</script>


    
</body>
</html>